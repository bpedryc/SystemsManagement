@model ICollection<Supervisor>
@{
    Layout = "_AdminLayout";
}

<div class="row mb-2">
    <a class="col-12 col-md-8 col-lg-6 btn btn-success" asp-controller="Supervisors" asp-action="Create">Dodaj nowego promotora</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Imię</th>
        <th scope="col">Nazwisko</th>
        <th scope="col">Email</th>
    </tr>

    @foreach (var supervisor in Model)
    {
        <tr>
            <th scope="row">@supervisor.Id</th>
            <td>@supervisor.User.FirstName</td>
            <td>@supervisor.User.LastName</td>
            <td>@supervisor.User.Email</td>
        </tr>
    }
</table>


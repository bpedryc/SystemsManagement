@{
    Layout = "AuthenticationLayout";
}

<p>Utwórz konto, by mieć możliwość rezerwacji tematu pracy</p>

<form asp-action="SignIn" asp-controller="Home">
    <!-- pozmieniac te asp na wlasciwe kontrolery -->
    <div class="form-group">
        <label>E-mail</label>
        <input class="form-control">
    </div>
    <div class="form-group">
        <label>Hasło</label>
        <input type="password" class="form-control" aria-describedby="passwordHelp">
    </div>
    <div class="form-group">
        <label>Powtórz hasło</label>
        <input type="password" class="form-control" aria-describedby="passwordHelp">
    </div>
    <div class="form-group">
        <label>Imię</label>
        <input class="form-control">
    </div>
    <div class="form-group">
        <label>Nazwisko</label>
        <input class="form-control">
    </div>
    <div class="form-group">
        <label>Nr albumu</label>
        <input class="form-control">
        <p>Masz już konto?<a asp-controller="Authentication" asp-action="Login"> Zaloguj się</a></p>
    </div>
    <!-- dodac jeszcze wydzialy i kierunki, ale pewnie w liscie, mozliwe, ze dwueatopowa rejestracja
        pierwszy etap email i haslo plus wybor prowadzacy czy student
        Drugi imie, nazwisko, nr albumu, wydzial, kierunek itd.-->
    <button type="submit" class="btn btn-primary">Dokończ rejestrację</button>
</form>


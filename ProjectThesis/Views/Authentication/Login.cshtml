@model ProjectThesis.Models.User; 
@{
    Layout = "AuthenticationLayout";
}
<h1>Witaj w systemie rezerwacji prac dyplomowych</h1>
<p>Zaloguj się, aby móc korzystać z systemu</p>
<p class="text-danger">@ViewData["Message"]</p>
<form asp-controller="Authentication" asp-action="Login" style="margin-left: 30%; width: 40%;">
    <div class="form-group">
        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" require type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" required type="password" class="form-control" aria-describedby="passwordHelp">
    </div>
    <button type="submit" class="btn btn-primary">Zaloguj się</button>
</form>

<p>
    Nie masz jeszcze konta?
    <a asp-controller="Authentication" asp-action="Register"> Zarejestruj się</a>
</p>

